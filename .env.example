# ==============================================================================
# ETAX MOBILE PWA ENVIRONMENT CONFIGURATION
# ==============================================================================
# Copy this file to .env and update with your actual values

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================
# Application environment (development, staging, production)
APP_ENV=development

# Application URL
APP_URL=http://localhost:8080

# Application name
APP_NAME=eTax Mobile

# ==============================================================================
# API CONFIGURATION
# ==============================================================================
# eTax API base URL
ETAX_API_URL=https://api.etax.gov.vn

# API timeout in seconds
API_TIMEOUT=30

# API version
API_VERSION=v1

# ==============================================================================
# DATABASE SETTINGS (if applicable)
# ==============================================================================
# Database type (sqlite, mysql, postgresql)
DB_CONNECTION=sqlite

# Database file path (for SQLite)
DB_DATABASE=./database/etax.db

# MySQL/PostgreSQL settings (if using)
# DB_HOST=localhost
# DB_PORT=3306
# DB_DATABASE=etax
# DB_USERNAME=etax_user
# DB_PASSWORD=your_password

# ==============================================================================
# SECURITY SETTINGS
# ==============================================================================
# JWT Secret key for authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Session secret key
SESSION_SECRET=your-session-secret-key-change-this-in-production

# Encryption key for sensitive data
ENCRYPTION_KEY=your-32-character-encryption-key

# ==============================================================================
# THIRD-PARTY SERVICES
# ==============================================================================
# Google Analytics tracking ID (optional)
# GA_TRACKING_ID=G-XXXXXXXXXX

# Firebase configuration (if using)
# FIREBASE_API_KEY=your-firebase-api-key
# FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
# FIREBASE_PROJECT_ID=your-project-id

# ==============================================================================
# EMAIL SETTINGS (if applicable)
# ==============================================================================
# SMTP configuration for email notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_ENCRYPTION=tls

# ==============================================================================
# LOGGING SETTINGS
# ==============================================================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log file path
LOG_FILE=./logs/etax.log

# ==============================================================================
# CACHE SETTINGS
# ==============================================================================
# Cache driver (file, redis, memcached)
CACHE_DRIVER=file

# Cache TTL in seconds
CACHE_TTL=3600

# ==============================================================================
# FILE STORAGE SETTINGS
# ==============================================================================
# Storage driver (local, s3, etc.)
STORAGE_DRIVER=local

# Upload directory
UPLOAD_DIR=./uploads

# Max file upload size in MB
MAX_FILE_SIZE=10

# ==============================================================================
# PWA SETTINGS
# ==============================================================================
# Service worker cache version
SW_CACHE_VERSION=v1

# Cache duration in seconds (7 days)
CACHE_DURATION=604800

# ==============================================================================
# DEVELOPMENT SETTINGS
# ==============================================================================
# Enable debug mode
DEBUG=false

# Enable development tools
DEV_TOOLS=false

# Enable API rate limiting
RATE_LIMIT_ENABLED=true

# ==============================================================================
# PRODUCTION SETTINGS
# ==============================================================================
# Enable HTTPS redirect
HTTPS_REDIRECT=true

# Enable security headers
SECURITY_HEADERS=true

# Enable compression
COMPRESSION_ENABLED=true

# ==============================================================================
# NOTES
# ==============================================================================
# 1. Never commit the actual .env file to version control
# 2. Use strong, unique secrets for JWT_SECRET, SESSION_SECRET, and ENCRYPTION_KEY
# 3. Update all placeholder values with your actual configuration
# 4. For production, set APP_ENV=production and DEBUG=false
# 5. Consider using environment-specific .env files (.env.staging, .env.production)
# ==============================================================================